# MongoDB (required)
MONGODB_URI=mongodb://localhost:27017/meditrack

# JWT (optional; default used if not set)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Socket server (for real-time updates)
SOCKET_PORT=3001

# Public URLs (set these when hosting - replace with your deployed URLs)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Socket server: allow frontend origin (set to your app URL when hosting, e.g. https://meditrack.vercel.app)
CORS_ORIGIN=http://localhost:3000
